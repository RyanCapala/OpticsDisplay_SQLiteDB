<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_list_row"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/cardViewBackground"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameTitle"
                android:text="Name: "
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:text="EW"
                android:textColor="@android:color/black"
                android:layout_marginLeft="50dp"
                android:layout_alignBottom="@+id/nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/descriptionTitle"
                android:text="Desc:"
                android:textColor="@android:color/black"
                android:textStyle="italic"
                android:layout_below="@+id/nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/description"
                android:text="Mt Blk/Blk Prizm"
                android:textColor="@android:color/black"
                android:layout_marginLeft="50dp"
                android:layout_alignBottom="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/modelTitle"
                android:layout_below="@+id/descriptionTitle"
                android:textStyle="italic"
                android:text="Mod#"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/modelNumber"
                android:text="OO1234-11"
                android:layout_alignBottom="@+id/modelTitle"
                android:layout_marginLeft="50dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/locationTitle"
                android:text="Loc:"
                android:textColor="@android:color/black"
                android:textStyle="italic"
                android:layout_alignBottom="@+id/modelNumber"
                android:layout_marginLeft="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/location"
                android:text="LDW1"
                android:textColor="@android:color/black"
                android:layout_marginLeft="180dp"
                android:layout_alignBottom="@+id/locationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dateTitle"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:text="Date: "
                android:layout_below="@+id/locationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:layout_marginLeft="50dp"
                android:text="Jan 1, 2018"
                android:textColor="@android:color/black"
                android:layout_alignBottom="@+id/dateTitle"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableRow
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/name"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <Button
                    android:layout_marginRight="10dp"
                    android:id="@+id/editButton"
                    android:background="@android:drawable/ic_menu_edit"
                    android:layout_height="30dp"
                    android:layout_width="30dp"/>

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/ic_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </TableRow>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>